Public Sub Button1_Click()

  If TextBox1.Text = "admin" And TextBox2.Text = "root" Then
    Login.Hide
    Login.TextBox1.Text = ""
    Login.TextBox2.Text = ""
    Adminform.Show
  Else If TextBox1.Text = "user" And TextBox2.Text = "@user" Then
    Login.Hide
    Login.TextBox1.Text = ""
    Login.TextBox2.Text = ""
    Us_er.Show
  Else If TextBox1.Length == 0 Or TextBox2.Length == 0 Or (TextBox1.Length == 0 And TextBox2.Length == 0) Then
    Message("Enter username and password!!!!!")  
  Else 
    Message("Wrong Username or Password!!!!")
    TextBox1.Text = ""
    TextBox2.Text = ""
  Endif


End
 


Public Sub TextBox1_KeyRelease()

  If TextBox1.Length > 0 Then
    Button1.Enabled = True
  Else
    Button1.Enabled = False
  Endif

End

Public Sub Form_Close()
  
  Message("Thank you. Come Again later!!!")
  Login.Close(0)
  
End

